<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="?attr/aviaryBottomBarOptionPanelContainerStyle"
	android:gravity="center"
	android:orientation="horizontal"
	android:weightSum="100" >

	<ImageView
		android:id="@+id/aviary_button_minus"
		style="?attr/aviarySymbolMinusStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="0" />

	<SeekBar
		android:id="@+id/aviary_seekbar"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:minHeight="18dip"
		android:maxHeight="18dip"
		android:paddingLeft="15dip"
		android:paddingRight="15dip"
		android:thumb="@drawable/aviary_seekbar_thumb"
		android:progressDrawable="@drawable/adjust_seekbar_progress"
		android:layout_weight="@integer/aviary_seekbar_weight"/>

	<ImageView
		android:id="@+id/aviary_button_plus"
		style="?attr/aviarySymbolPlusStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="0" />

</LinearLayout><!-- From: file:/C:/Users/Vasu/StudioProjects/CamTest/aviarySDK/src/main/res/layout/aviary_adjust_seekbar.xml -->